# VitalFlow-Radar Public Demo Configuration
# ==========================================
# This is a PUBLIC template for demo/testing purposes
# For production use, copy to .env and fill in your actual credentials
# NEVER commit .env or any file with real credentials to version control!

# ============================================================================
# CONFLUENT CLOUD CONFIGURATION
# ============================================================================
CONFLUENT_BOOTSTRAP_SERVERS=your-bootstrap-server.confluent.cloud:9092
CONFLUENT_API_KEY=<your-confluent-api-key>
CONFLUENT_API_SECRET=<your-confluent-api-secret>

CONFLUENT_SCHEMA_REGISTRY_URL=https://your-schema-registry.confluent.cloud
CONFLUENT_SCHEMA_REGISTRY_KEY=<your-schema-registry-key>
CONFLUENT_SCHEMA_REGISTRY_SECRET=<your-schema-registry-secret>

# ============================================================================
# GOOGLE CLOUD CONFIGURATION

GOOGLE_CLOUD_PROJECT=<your-gcp-project-id>
VERTEX_AI_LOCATION=us-central1


# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

DEVICE_ID=radar-demo-001
RADAR_FPS=10
ANALYSIS_WINDOW_SEC=30
UPDATE_INTERVAL_SEC=5

# ============================================================================
# DASHBOARD CONFIGURATION
# ============================================================================

DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
DEBUG=false

# ============================================================================
# ALERT CONFIGURATION (Optional)
# ============================================================================

ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_FROM=<your-email@example.com>
ALERT_EMAIL_TO=<recipient@example.com>
ALERT_EMAIL_PASSWORD=<your-app-password>

ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
